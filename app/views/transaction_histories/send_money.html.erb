<div class="card bg-light">
<h1>Transaction</h1>
<p>Enter following information to transfer money</p>
<%= form_with model: @transaction, data: { controller: "hello" }, method: :post ,url: new_transaction_path do|form| %>
  <div class="form-outline mb-4" > 
    <%= form.label :upi , class: "form-label"  %> 
    <%= form.text_field :upi, class: "form-control",  "data-hello-target": "upi", autocomplete: "off" ,id: "upi" , value: params[:upi]%>
    <a data-action="click->hello#verify", name="verify", method= "get" font>Click to Verify</a>
  </div>
  <div id="user_info" ></div>
  </div>
  <div class="form-outline mb-4">
    <%= form.label :amount, class: "form-lab el" %>
    <%= form.text_field :amount, class: "form-control" ,value: params[:amount]%>
    
    <% @transaction.errors.full_messages_for(:amount).each do |message| %>
      <%= message %><br>
    <% end %>
  </div>
  <div>
    <%= form.label :pin, class: "form-lab el" %> 
    <%= form.password_field :pin,class: "form-control" %>
    
  </div>
  <%= form.hidden_field :loan_id ,value: params[:loan_id]%>
  <%= form.hidden_field :emi_id ,value: params[:emi_id]%>

    <div id = "user_button">
    <%= form.submit "Send money",method: :create, id:"send", name:"Send_money", disabled: true %><br>
  </div>
<%end%>
</div>
